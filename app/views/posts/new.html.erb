<div class="text-center" style="margin-top: 7rem;">
  <h1>投稿画面</h1>
  
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 m-auto">
        <%= form_with model: @post, local: true do |form| %>
          <div class="form-group">
            <%= form.label :title %>
            <%= form.text_field :title, class: 'form-control', id: 'post_title' %>
          </div>
          <div class="form-group">
            <%= form.label :body %>
            <%= form.text_area :body, class: 'form-control', id: 'post_body' %>
          </div>
          <%= form.submit '投稿', class: 'btn btn-primary' %>
        <% end %>
        </div>
    </div>
  </div>  
</div>  