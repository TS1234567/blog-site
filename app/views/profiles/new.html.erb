<div class="text-center" style="margin-top: 7rem;">
  <h1>プロフィール作成</h1>
  
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 m-auto">
        <%= form_with model: @profile, local: true do |form| %>
          <div class="form-group">
            <%= form.label :content %>
            <%= form.text_area :content, class: 'form-control', id: 'profile_content' %>
          </div>
          
          <%= form.submit '作成', class: 'btn btn-primary' %>
        <% end %>
      </div>  
    </div>
  </div>  
</div>  