<div class="container">
  <div class="row">
    <aside class="col-sm-6">
      <div class="card" style="margin-top: 7rem; width: 18rem;">
        <img src="<%= gravatar_url(@user, { size: 300 }) %>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= @user.name %></h5>
            <p class="card-text"><%= @user.profile %></p>
          </div>
      </div>    
      <%= render 'relationships/follow_button', user: @user %>
    </aside>
    <div class="col-sm-6">
      <ul class="nav nav-tabs nav-justified">
        <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>Posts <span class="badge"><%= @count_posts %></span><% end %></li>
        <li class="<%= 'active' if current_page?(followings_user_path(@user)) %>"><%= link_to followings_user_path(@user) do %>Followings <span class="badge"><%= @count_followings %></span><% end %></li>
        <li class="<%= 'active' if current_page?(followers_user_path(@user)) %>"><%= link_to followers_user_path(@user) do %>Followers <span class="badge"><%= @count_followers %></span><% end %></li>
      </ul>
      <%= render 'users', users: @followers %>
    </div>
  </div>
</div>  